<form>
  <label>DG Log</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="hosttok" searchWhenChanged="true">
      <label>Host Name</label>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <search>
        <query>index=logiq |stats count by host</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
    </input>
    <input type="text" token="eventtok" searchWhenChanged="true">
      <label>Event Type Filter</label>
      <default>*</default>
      <initialValue>*</initialValue>
      <prefix>*</prefix>
      <suffix>*</suffix>
    </input>
    <input type="dropdown" token="errtok" searchWhenChanged="true">
      <label>ALL OR ONLY ERROR</label>
      <choice value="*error*">ERROR</choice>
      <choice value="">ALL</choice>
      <default></default>
    </input>
    <input type="time" token="timetok" searchWhenChanged="true">
      <label>Event Time</label>
      <default>
        <earliest>0</earliest>
        <latest></latest>
      </default>
    </input>
    <input depends="$hidden$" type="text" token="pid" searchWhenChanged="true">
      <label>pid</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Free Disk Space</title>
        <search>
          <query>index=logiq sourcetype=dglog host=$hosttok$ EventType="[DgServiceMonitor::CheckLowDiskSpace]"|stats last(diskspace)</query>
          <earliest>$timetok.earliest$</earliest>
          <latest>$timetok.latest$</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0xdc4e41","0xf1813f","0xf8be34","0x53a051"]</option>
        <option name="rangeValues">[2000,5000,7500]</option>
        <option name="refresh.display">progressbar</option>
        <option name="unit">MB</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">0</option>
      </single>
    </panel>
    <panel>
      <single>
        <title>Agent Version</title>
        <search>
          <query>index=logiq sourcetype=dglog host=$hosttok$ EventType=\[CDataProcessor::Start\] "Agent Version:"|rex field=_raw Agent\sVersion:\s(?P&lt;Agent_Version&gt;\S+)|stats last(Agent_Version)</query>
          <earliest>$timetok.earliest$</earliest>
          <latest>$timetok.latest$</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Event Types</title>
        <search>
          <query>index=logiq sourcetype=dglog host=$hosttok$ EventType=$eventtok|s$ $errtok$|dedup EventType|sort EventType|table EventType</query>
          <earliest>$timetok.earliest$</earliest>
          <latest>$timetok.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <set token="EventType">$click.value$</set>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Drill-Down of Selected EventType</title>
      <event>
        <title>Events</title>
        <search>
          <query>index=logiq sourcetype=dglog host=$hosttok$ EventType=$EventType|s$ $errtok$</query>
          <earliest>$timetok.earliest$</earliest>
          <latest>$timetok.latest$</latest>
        </search>
        <option name="list.drilldown">full</option>
        <option name="refresh.display">progressbar</option>
      </event>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>IsAVirtualBoxProcess from dg.log/dglog.bak</title>
        <search>
          <query>index=logiq sourcetype=dglog EventType="[IsAVirtualBoxProcess]" PID=$pid$|table _time, PID, process_path</query>
          <earliest>$timetok.earliest$</earliest>
          <latest>$timetok.latest$</latest>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_blank">search?q=index%3Dlogiq%20sourcetype%3Ddglog%20host%3D$hosttok$%20%22$click.name2$%22%3D%22$click.value2$*%22&amp;earliest=$timetok.earliest$&amp;latest=$timetok.latest$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>
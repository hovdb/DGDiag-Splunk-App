<form>
  <label>Drivers Info</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="hosttok" searchWhenChanged="true">
      <label>Host Name</label>
      <fieldForLabel>host</fieldForLabel>
      <fieldForValue>host</fieldForValue>
      <search>
        <query>index=logiq |stats count by host|eval lc=lower(host)|sort 0  lc</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
      <choice value="*">All</choice>
      <default>*</default>
    </input>
    <input type="dropdown" token="statetok">
      <label>State</label>
      <choice value="*">Any</choice>
      <default>Running</default>
      <fieldForLabel>State</fieldForLabel>
      <fieldForValue>State</fieldForValue>
      <search>
        <query>index=logiq host=$hosttok|s$ sourcetype=diag11 | stats count BY State|eval lc=lower(State)|sort 0 lc</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
    </input>
    <input type="text" token="pathtok">
      <label>Path</label>
      <default>*</default>
      <initialValue>*</initialValue>
    </input>
  </fieldset>
  <row>
    <panel>
      <single>
        <title>Host Name(s)</title>
        <search>
          <query>index=logiq host=$hosttok|s$|stats count by host|eval lc=lower(host)|sort lc|fields host|mvcombine delim=", " host|nomv host</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0xdc4e41"]</option>
        <option name="rangeValues">[0]</option>
        <option name="refresh.display">progressbar</option>
        <option name="useColors">1</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Drivers</title>
        <search>
          <query>index=logiq host=$hosttok|s$ sourcetype=diag11 State=$statetok|s$ ProcessPath=$pathtok|s$ | rename Name AS _name | eval Name=lower(_name)|sort 0 Name|fieldformat Name=_name</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <fields>["Name","DisplayName","Description","PathName","StartMode","State"]</fields>
      </table>
    </panel>
  </row>
</form>